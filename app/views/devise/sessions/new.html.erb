
<div id="mypush"></div>

<%= form_for(resource, :html => { :class => "form-signin form-horizontal" }, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <h2 class="form-signin-heading">Please sign in</h2>

  <%= f.email_field :email, class: "input-block-level", placeholder: "Email address", :required =>true, :autofocus => true %>

  <%= f.password_field :password, class: "input-block-level", :required => true, placeholder: "Password" %>

  <div class="control-group">
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "checkbox inline" %></div>
  <% end -%>
  </div>

  <div><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></div>

  <br />
  <%= render "devise/shared/links" %>

<% end %>

