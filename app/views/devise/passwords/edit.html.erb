
<div id="signup-form-margin"></div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-signup form-horizontal" }) do |f| %>

  <h2 class="form-signin-heading">Change your password</h2>

  <%= devise_error_messages! %>

  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "New password" %>
  <%= f.password_field :password, :autofocus => true %></div>

  <div><%= f.label :password_confirmation, "Confirm new password" %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Change my password" %></div>
<% end %>

