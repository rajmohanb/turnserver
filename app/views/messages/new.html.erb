<div id="contactpush"></div>

<%= form_for @message, :html => { class: "form-contact form-horizontal"} do |f| %>

  <h2 class="form-signin-heading">Contact us</h2>

  <% if @message.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being processed:</h2>
      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input-block-level", :autofocus => true %>
  </div>
  <div class="control-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "input-block-level" %>
  </div>
  <div class="control-group">
    <%= f.label :Organization %>
    <%= f.text_field :company, class: "input-block-level" %>
  </div>
  <div class="control-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, class: "input-block-level" %>
  </div>
  <div class="control-group">
    <%= f.label :content, "Message" %>
    <%= f.text_area :content, :rows => 8, class: "input-block-level" %>
  </div>
  <div class="actions"><%= f.submit "Send Message", class: "btn btn-success" %></div>
<% end %>
