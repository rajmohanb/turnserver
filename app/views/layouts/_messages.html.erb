<!-- source for fading away of flash messages
http://blog.robincwillis.com/2013/08/08/tutorial-rails-3%2Bbootstrap-fading-flash-alerts/ -->
<div id="notice">
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <div class="alert-temp alert fade in alert-<%= name == :notice ? "success" : "error" %>">
    <!-- <div class="alert-temp alert fade in alert-<%= name %>"> -->
          <!-- <a class="close" data-dismiss="alert">&#215;</a> -->
        <% #= content_tag :div, msg, :id => "flash_#{name}" %>
        <%= msg %>
      </div>
    <% end %>
  <% end %>
</div>
