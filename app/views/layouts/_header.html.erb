        <%= link_to "SeamConnect", root_path, id: "logo" %>
        <%= link_to "beta", root_path, id: "beta" %>
      </a>
      <nav>
        <ul class="nav">
          <li><%= link_to "FAQ", faq_path %></li>
          <li><%= link_to "Demo", "https://seamconnect-webrtc.appspot.com/" %></li>
          <li><%= link_to "Getting Started", getting_started_path %></li>
