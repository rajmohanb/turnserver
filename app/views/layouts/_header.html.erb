<header class="navbar transparent navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand">
        <%= link_to "SeamConnect", root_path, id: "logo" %>
        <%= link_to "beta", root_path, id: "beta" %>
      </a>
      <nav>
        <ul class="nav">
          <% if customer_signed_in? %>
            <li><%= link_to current_customer.organization, customer_path(current_customer) %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Configuration", edit_customer_path(current_customer) %></li>
              </ul>
          <% else %>
            <li><%= link_to "Features", features_path %></li>
            <li><%= link_to "Pricing", pricing_path %></li>
            <!-- <li><%#= link_to "Service Providers", features_path %></li> -->
            <li><%= link_to "Enterprise", enterprise_path %></li>
          <% end %>
          <li><%= link_to "Blog",     blog_path %></li>
        </ul>
        <ul class="nav pull-right">
          <% if customer_signed_in? %>
            <li><!-- <i class="icon-user icon-white"></i> -->
            <%= link_to "Sign Out",  
                destroy_customer_session_path, :method => :delete %></li>
          <% else %>
            <li><!-- <i class="icon-user icon-white"></i> -->
            <%= link_to "Sign In",  new_customer_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>

