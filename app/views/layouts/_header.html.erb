        <ul class="nav pull-right">
          <% if customer_signed_in? %>
            <li><!-- <i class="icon-user icon-white"></i> -->
            <%= link_to "Sign Out",  
                destroy_customer_session_path, :method => :delete %></li>
          <% else %>
            <li><!-- <i class="icon-user icon-white"></i> -->
            <%= link_to "SIGN UP",  new_customer_registration_path %></li>
            <li><%= link_to "SIGN IN",  new_customer_session_path %></li>
