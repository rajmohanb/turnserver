<%= form_for(@customer, :html => { :class => "form-horizontal" }, :url => { :action => "update" }, :method => "put") do |f| %>

  <fieldset>
    <div id="legend" class="">
      <legend class="">Account Settings</legend>
    </div>

    <!-- <%= debug f %> -->
    <!-- <%= simple_format @user.to_yaml %> -->

    <div class="control-group">

      <!-- Text input-->
      <%= f.label :first_name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :first_name, :class => "input-xlarge" %>
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">

      <!-- Text input-->
      <%= f.label :last_name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :last_name, :class => "input-xlarge" %>
        <p class="help-block"></p>
      </div>
    </div>


    <div class="control-group">

      <!-- Text input-->
      <%= f.label :webapp_url, :class => "control-label" %>
      <div class="controls">
        <%= f.url_field :webapp_url, :class => "input-xlarge" %>
        <p class="help-block"><small>URL of your WebRTC application. eg: https://www.seamconnect.com<br />Please make sure that the URL is complete and accurate including schema (http/https), domain and port (in case server is running on non-standard ports). Otherwise the REST API requests will fail!</small></p>
      </div>
    </div>


    <div class="control-group">

      <!-- Text input-->
      <%= f.label :authentication_token, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :authentication_token, :readonly => true, :class => "input-xlarge" %>
        <p class="help-block"><small>Authentication key for REST API request</small></p>
      </div>
    </div>


    <div class="control-group">
      <label class="control-label"></label>

      <!-- Button -->
      <div class="controls">
        <div><%= f.submit "Save Configuration", class: "btn btn-small btn-success" %></div>
      </div>
    </div>

  </fieldset>
</form>
<% end %>

